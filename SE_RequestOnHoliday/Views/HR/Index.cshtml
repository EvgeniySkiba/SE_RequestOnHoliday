@model IEnumerable<SE_RequestOnHoliday.ViewModel.RestVM>

@{
    ViewBag.Title = "Index";
}

<h2>Все сотрудники</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.Status</td>
                
                <td>
                    @Html.ActionLink("ChangeStatus", "ChangeStatus", new { id = item.Id }) 
                </td>
            }
        </tr>
    </tbody>
</table>
