@model IEnumerable<SE_RequestOnHoliday.ViewModel.RestVM>

@{
    ViewBag.Title = "Index";
}

<h2>Все сотрудники</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Type</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
      
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.StartDate.ToString("dd/mm/yyyy")</td>
                    <td>@item.EndDate.ToString("dd/mm/yyyy")</td>
                    <td>@item.RestType</td>
                    <td>@item.Status</td>

                    <td>
                        @Html.ActionLink("ChangeStatus", "ChangeStatus", new { id = item.Id })
                    </td>
                </tr>
            }
        
    </tbody>
</table>
