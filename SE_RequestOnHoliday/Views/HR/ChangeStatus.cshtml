
@model SE_RequestOnHoliday.ViewModel.ChangeStatus



@{
    ViewBag.Title = "ChangeStatus";
}

<h2>ChangeStatus</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Change Status</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.ChangeStatusId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChangeStatusId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChangeStatusId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status,
                Enum.GetNames(typeof(SE_RequestOnHoliday.Enums.RestType)).Select(e => new SelectListItem { Text = e, Value = ((int)Enum.Parse(typeof(SE_RequestOnHoliday.Enums.RestType), e)).ToString() })
                ,"", new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}